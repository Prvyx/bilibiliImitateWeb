<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prvyx.mapper.video.VideoCoinMapper">
    <update id="addVideoCoin">
        update video set video_coin_number=video_coin_number+1
        where video_id=#{videoId}
    </update>
</mapper>